<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.miaomiao.bconsole" version="1.0.4" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Miaomiao-B-Console</name>
    <description>
        Miaomoai customers console app
    </description>
    <author email="liangji101@yahoo.com" href="http://www.mbianli.com/">
        Miaomiao team
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <preference name="fullscreen" value="false"/>
    <preference name="webviewbounce" value="false"/>
    <preference name="UIWebViewBounce" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="StatusBarBackgroundColor" value="white"/>
    <preference name="AutoHideSplashScreen" value="false"/>
    <preference name="BackupWebStorage" value="none"/>
    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true"/>
    </feature>
    <feature name="Keyboard">
        <param name="ios-package" value="IonicKeyboard" onload="true"/>
    </feature>
    <platform name="android">

        <icon src="resource/android/drawable/icon.png" density="ldpi" />
        <icon src="resource/android/drawable-mdpi/icon.png" density="mdpi" />
        <icon src="resource/android/drawable-hdpi/icon.png" density="hdpi" />
        <icon src="resource/android/drawable-idpi/icon-02.png" density="idpi" />
        <icon src="resource/android/drawable-xhdpi/icon.png" density="xhdpi" />

        <!-- you can use any density that exists in the Android project -->
        <splash src="resource/android/drawable-land-hdpi/screen.png" density="land-hdpi"/>
        <splash src="resource/android/drawable-land-ldpi/screen.png" density="land-ldpi"/>
        <splash src="resource/android/drawable-land-mdpi/screen.png" density="land-mdpi"/>
        <splash src="resource/android/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>

        <splash src="resource/android/drawable-port-hdpi/screen.png" density="port-hdpi"/>
        <splash src="resource/android/drawable-port-ldpi/screen.png" density="port-ldpi"/>
        <splash src="resource/android/drawable-port-mdpi/screen.png" density="port-mdpi"/>
        <splash src="resource/android/drawable-port-xhdpi/screen.png" density="port-xhdpi"/>
    </platform>

    <platform name="ios">
        <icon src="resource/ios/icons/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="resource/ios/icons/icon-60.png" width="60" height="60" />
        <icon src="resource/ios/icons/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="resource/ios/icons/icon-76.png" width="76" height="76" />
        <icon src="resource/ios/icons/icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="resource/ios/icons/icon-40.png" width="40" height="40" />
        <icon src="resource/ios/icons/icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="resource/ios/icons/icon.png" width="57" height="57" />
        <icon src="resource/ios/icons/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="resource/ios/icons/icon-72.png" width="72" height="72" />
        <icon src="resource/ios/icons/icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="resource/ios/icons/icon-small.png" width="29" height="29" />
        <icon src="resource/ios/icons/icon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="resource/ios/icons/icon-50.png" width="50" height="50" />
        <icon src="resource/ios/icons/icon-50@2x.png" width="100" height="100" />

        <!-- images are determined by width and height. The following are supported -->
        <splash src="resource/ios/splash/Default~iphone.png" width="320" height="480"/>
        <splash src="resource/ios/splash/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="resource/ios/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="resource/ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="resource/ios/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="resource/ios/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="resource/ios/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="resource/ios/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="resource/ios/splash/Default-736h.png" width="1242" height="2208"/>
        <splash src="resource/ios/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
        
    </platform>
</widget>