<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">
    <title>Dashboard Template for Bootstrap</title>
    <!-- Bootstrap core CSS -->
    <link href="/js/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"> Cat </a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">

            <form class="navbar-form navbar-right" action="/console/order/query">
                <input name="query" type="text" class="form-control" placeholder="Search...">
            </form>
        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">
        <!--<div class="col-sm-3 col-md-2 sidebar">-->
            <!--<ul class="nav nav-sidebar">-->

                <!--<li class="active"><a href="#">    </a></li>-->
                <!--#foreach($category in $categoryls)-->
                <!--<li #if($category.category_id == $curr_cate_id ) class="active" #end><a href="/console/shop?shop_id=${shop.id}&category_id=${category.category_id}"> $category.name</a></li>-->
                <!--#end-->
            <!--</ul>-->
        <!--</div>-->
        <div class="col-sm-9 col-sm-offset-3 col-md-12 col-md-offset-0 main"  style="padding-top:60px">
            <div class="table-responsive" >
                <table class="table table-striped" >
                    <thead>
                    <tr>
                        <th>id</th>
                        <th>店铺名字</th>
                        <th>店铺电话</th>
                        <th>店长电话</th>
                        <th>创建时间</th>
                        <th>经度</th>
                        <th>纬度</th>
                        <th>开业时间</th>
                        <th>闭业时间</th>
                        <th>店铺地址</th>
                        <th>店铺已上线(0:下线 1:上线)</th>
                        <th>店铺操作</th>
                    </tr>
                    </thead>
                    #foreach($shop in $shopls)
                    <tr>
                        <td>$shop.id</td>
                        <td class="edit" id="e-${shop.id}-name">$shop.name</td>
                        <td class="edit" id="e-${shop.id}-tel">$shop.tel</td>
                        <td class="edit" id="e-${shop.id}-owner_phone">$shop.owner_phone</td>
                        <td class="edit" id="e-${shop.id}-create_time">$shop.create_time</td>
                        <td class="edit" id="e-${shop.id}-lng">$shop.lng</td>
                        <td class="edit" id="e-${shop.id}-lat">$shop.lat</td>
                        <td class="edit" id="e-${shop.id}-open_time">#if (! $shop.open_time) #else $date.format('HH:mm',$shop.open_time) #end</td>
                        <td class="edit" id="e-${shop.id}-close_time">#if (! $shop.close_time) #else $date.format('HH:mm',$shop.close_time) #end</td>
                        <td class="edit" id="e-${shop.id}-shop_address">$shop.shop_address</td>
                        <td class="edit" id="e-${shop.id}-audit">$shop.audit</td>
                        <td><a href="/sg/shop?shop_id=${shop.id}">访问店铺 </a><br/>
                            <a href="/console/login">店铺后台 </a></td>
                    </tr>
                    #end
                    </tbody>
                </table>
                <nav>
                    <ul class="pager">
                        #if($previous_f)
                        <li>
                          <a href="/console/allshop?from=$previous_f&offset=10">Previous</a></li>
                        #end
                        #if($next_f)
                        <li><a href="/console/allshop?from=$next_f&offset=10">Next</a></li>
                        #end
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

