<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">
    <title>Dashboard Template for Bootstrap</title>
    <!-- Bootstrap core CSS -->
    <link href="/js/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"> 喵喵订单聚合列表 </a>
        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar" style="padding-top:30px">
            <ul class="nav nav-sidebar">

                <li class="active"><a href="#">    </a></li>
                #foreach($shop in $shops)
                <li #if($shop.id == $curr_shop_d ) class="active" #end><a href="/console/allshop/orders?shop_id=${shop.id}"> $shop.name</a></li>
                #end
            </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-0 main">

            <h2 class="sub-header">Section title</h2>

            <div class="table-responsive">
                <table class="table table-striped" >
                    <thead>
                    <tr>
                    	<th>店铺id</th>
                    	<th>店铺名称</th>
                        <th>订单id</th>
                        <th>订单号</th>
                        <th>创建时间</th>
                        <th>状态</th>
                        <th>地址</th>
                        <th>总价</th>
                        <th>是否是微信支付</th>
                        <th>订单快照</th>

                    </tr>
                    </thead>
                    #foreach($order in $orderls)
                    <tr>
                    	<td>${order.shop_id}</td>
                    	<td>${order.shop_name4V}</td>
                        <td>${order.id}</td>
                        <td class="" id="e-${item.shop_id}-serialNo-$item.id">$order.order_id</td>
                        <td class="" id="e-{$item.shop_id}-name-$item.id">$order.create_time</td>
                        <td class="" id="e-{$item.shop_id}-status-$item.id"> #if($order.status ==1 ) 下单成功 #end  #if($order.status ==2) 打印完成 #end</td>
                        <td class="" id="e-{$item.shop_id}-address-$item.id">${order.address}  ${order.phone}</td>
                        <td class="" id="e-{$item.shop_id}-price-$item.id">${order.price4V}元</td>
                        <td class="" id="e-{$item.shop_id}-msg-$item.order_id">${order.act} - ${order.msg}</td>
                        <td class="" id="e-{$item.category_id}-category_id-$item.id">$order.info</td>
                    </tr>
                    #end
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
<script src="/js/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="http://www.appelsiini.net/download/jquery.jeditable.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
    $('.edit').editable('/console/shop/ud',{
    tooltip : 'Click to edit...',
    callback : function(value, settings) {
    location.reload() ;
    }
    });
    $('.edit_area').editable('/console/shop/ud' ,{
    type : 'textarea',
    cancel : 'Cancel',
    submit : 'OK',
    indicator : '<img src="img/indicator.gif">',
    tooltip : 'Click to edit...'
    });
    });
    $(".btn").click(function(){
		var result = confirm("是否确认删除"),
			oThis = $(this);
		if(result){
		$.ajax({
			type:"POST",url:"/console/shop/del",
			data:{id:oThis.data('id'),shop_id:oThis.data('shopid')},
			success:function(data){
				  alert(data);
				  location.reload();
				}
			});
		}
	});
    $("#query_input").keydown(function(e){
    var curKey = e.which;
    if(curKey == 13)
    {
      $("#query_form").submit();
    }
    });
    function fileChange(item) {
            var ss = (item.value).split('.');
            if (ss.length == 2 && /(gif|jpg|jpeg|png|GIF|JPEG|PNG|JPG)$/.test(ss[1])) {
                $("#fileName").val(item.value);
            } else {
                var obj = document.getElementById("inputfile");
               obj.outerHTML = obj.outerHTML;
                $("#inputfile").val("");
                alert("用户源配置文件格式错误");
            }
        }
    $(".form-add").click(function(){
		var result = confirm("是否确认提交"),
		oThis = $(this);
		if(result){
			var pic = oThis.data('id');
			var picVal =$('#'+ pic).val();
			if(picVal == ''){
			  alert("请上传图片");
			  return false;
			}
			return true;
		}
		return false;
	});
</script>
</body>
</html>
